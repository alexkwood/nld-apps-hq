div#users-wrapper.sidebar
  h2 Currently Viewing
  div#users

div#lists-wrapper.sidebar
  != partial('partials/your-lists')
  != partial('partials/guest-lists')
  
  != partial('partials/new-list')


div#list-wrapper
  h2= list.title
  div.credits Created by #{list._creator.displayName()}
  div#list
    div#no-items There are no items in the list.

div#new-item-wrapper
  h3 Add an item
  form#new-item
    input#item(type='text', size='60')
    input#add(type='submit', value='Add')

- if (userIsListCreator)
  div#delete-list
    a.delete-list(href='#{listsBase}/list/#{list._id}/delete') Delete this list