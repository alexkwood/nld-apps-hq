!!! 5
html
  head
    title= fcAppTitle
    
    //-shared
    link(rel='stylesheet', href='/stylesheets/style.css')
    //-flashcards
    link(rel='stylesheet/less', type='text/css', href='#{fcBase}/stylesheets/style.less')
    
    //-@todo replace this w/ connect-less
    script(src='#{fcBase}/javascripts/lesscss.min.js')

    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js')
    script(src='#{fcBase}/javascripts/flashcards.js')
    
    //- allow pages to have their own scripts
    - if (typeof extraScripts != 'undefined')
      - extraScripts.forEach(function(script){
          script(src='#{script}')
      - })    

  body(class=fcBodyClass)
    != appsHeader
  
    div#main
      h1= fcAppTitle
        - if (fcIsLoggedIn)
          |: #{username}
    
      //- [sets the content of nav.jade to the block nav, can be overridden in child templates]
      block nav
        include includes/nav
    
        h2= pageTitle || ''
    
      != messages()    
    
      != body


